<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="5dp"
    app:cardElevation="4dp">
    
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content">
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/wow"
            android:id="@+id/img_view_pelicula"
            android:cropToPadding="true"
            android:drawingCacheQuality="high"
            android:scaleType="fitXY"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="1dp"
            android:background="@color/divider"
            android:layout_below="@+id/img_view_pelicula"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/text_view_nombre"
            android:layout_centerVertical="true"
            android:layout_alignTop="@+id/img_view_pelicula"
            android:text="TÃ­tulo"
            android:padding="3dp"
            android:textColor="@android:color/white"
            android:background="@drawable/shape_title"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/text_view_genero"
            android:layout_centerVertical="true"
            android:text="Comedia, Infantil, Accion"
            android:gravity="center_horizontal|center_vertical"
            android:padding="3dp"
            android:textColor="@color/secondary_text"
            android:layout_below="@+id/img_view_pelicula"
            android:textSize="12sp"
            />
        
    </RelativeLayout>

</android.support.v7.widget.CardView>